#step 1: Display the menu
print('Welcome to the Word Search Game!')
print('Choose your grid size:')
print('1. 5x5')
print('2. 10x10')
print('3. 15x15')

#step 2: take user input
user_choice = input('Enter the number corresponding to your choice (1,2, or 3): ')

#step 3: validate the input
if user_choice == '1':
    print('You selected a 5x5 grid.')
elif user_choice == '2':
    print('You selected a 10x10 grid.')
elif user_choice == '3':
    print('You selected a 15x15 grid.')
else:
    print('Invalid choice! Please restart the program and select a valid option.')
